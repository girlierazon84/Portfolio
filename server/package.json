{
    "name": "portfolio-server",
    "version": "1.0.0",
    "private": true,
    "main": "dist/server.js",
    "type": "commonjs",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
        "dev:client": "cd ../client && npm run dev",
        "build": "tsc",
        "start": "node dist/server.js",
        "lint": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "mongoose": "^8.5.3",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.7",
        "@types/node": "^20.19.13",
        "concurrently": "^8.2.2",
        "dotenv-cli": "^10.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5"
    }
}
